
<%- include('header') %>
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row">

                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">Tables</h4>
                    <div class="ms-auto text-end">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Library
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
               
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <h5 class="card-title">Table</h5>
                                     </div>
                                </div>

                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Category</th>
                                            <th scope="col">Subcategory</th>
                                            <th scope="col">Action</th>
                                            <th scope="col">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% subcategory.map((subcat,i)=>{ %>
                                            <tr>
                                               <td><%= ++i %></td>
                                               <td>
                                                <%= subcat.categoryId.category_name %>
                                               </td>
                                               <td>
                                                <%= subcat.subcategory %>
                                               </td>
                                               <td>
                                                <a href="/subcategory/deletsubcategory?id=<%=subcat.id %>" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> Delete</a> &nbsp;&nbsp;&nbsp;
                                                <a class="btn btn-secondary btn-sm" href="/subcategory/editsubcategory?id=<%= subcat.id %>"><i class="fa fa-edit"></i> Edit</a>
                                               </td>
                                               <td>
                                                <% if(subcat.status == "active"){ %>
                                                    <a class="btn btn-success" href="subcategory/changestatus?id=<%= subcat.id %>&status=<%= subcat.status %>"><%= subcat.status %></a>
                                                <% } else { %>
                                                    <a class="btn btn-warning" href="/subcategory/changestatus?id=<%= subcat.id %>&status=<%= subcat.status %>"><%= subcat.status %></a>
                                                <% } %>
                                            </td>
                                            
                                            </tr>
                                       <% }) %>
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                    <!-- ============================================================== -->
                    <!-- End PAge Content -->
                    <!-- ============================================================== -->
                    <!-- ============================================================== -->
                    <!-- Right sidebar -->
                    <!-- ============================================================== -->
                    <!-- .right-sidebar -->
                    <!-- ============================================================== -->
                    <!-- End Right sidebar -->
                    <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- End Container fluid  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- footer -->
        <!-- ============================================================== -->
        <footer class="footer text-center">
            All Rights Reserved by Matrix-admin. Designed and Developed by
            <a href="https://www.wrappixel.com">WrapPixel</a>.
        </footer>
        <!-- ============================================================== -->
        <!-- End footer -->
        <!-- ============================================================== -->
    </div>

    <%- include('footer') %>